<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/c_f"
        android:orientation="vertical"
        android:padding="16dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp">

            <TextView
                style="@style/font_red_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="项目名称："
                android:textStyle="bold"/>

            <com.kingja.zsqs.view.StringTextView
                android:id="@+id/tv_projectName"
                style="@style/font_red_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="鹿城区XXX项目"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:orientation="horizontal">

            <!--左边描述-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40dp">

                    <TextView
                        style="@style/font_3_13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="项目所属区："
                        android:textStyle="bold"/>

                    <com.kingja.zsqs.view.StringTextView
                        android:id="@+id/tv_areaName"
                        style="@style/font_3_13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="鹿城区XXX项目"
                        android:textStyle="bold"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40dp">

                    <TextView
                        style="@style/font_3_13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="项目地址："
                        android:textStyle="bold"/>

                    <com.kingja.zsqs.view.StringTextView
                        android:id="@+id/tv_address"
                        style="@style/font_3_13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="鹿城区XXX项目"
                        android:textStyle="bold"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp">

                    <TextView
                        style="@style/font_red_16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="征收总户数："
                        android:textStyle="bold"/>

                    <com.kingja.zsqs.view.StringTextView
                        android:id="@+id/tv_totalBuildingCount"
                        style="@style/font_red_16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="鹿城区XXX项目"
                        android:textStyle="bold"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp">

                    <TextView
                        style="@style/font_9_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="住宅征收户数："
                        android:textStyle="bold"/>

                    <com.kingja.zsqs.view.StringTextView
                        android:id="@+id/tv_houseTotalBuildingCount"
                        style="@style/font_9_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="鹿城区XXX项目"
                        android:textStyle="bold"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40dp">

                    <TextView
                        style="@style/font_9_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="非住宅征收户数："
                        android:textStyle="bold"/>

                    <com.kingja.zsqs.view.StringTextView
                        android:id="@+id/tv_entTotalBuildingCount"
                        style="@style/font_9_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="鹿城区XXX项目"
                        android:textStyle="bold"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp">

                    <TextView
                        style="@style/font_red_16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="征收总建筑面积："
                        android:textStyle="bold"/>

                    <com.kingja.zsqs.view.StringTextView
                        android:id="@+id/tv_totalBuildingArea"
                        style="@style/font_red_16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="鹿城区XXX项目"
                        android:textStyle="bold"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp">

                    <TextView
                        style="@style/font_9_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="住宅征收面积："
                        android:textStyle="bold"/>

                    <com.kingja.zsqs.view.StringTextView
                        android:id="@+id/tv_houseTotalBuildingArea"
                        style="@style/font_9_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="鹿城区XXX项目"
                        android:textStyle="bold"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/font_9_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="非住宅征收面积："
                        android:textStyle="bold"/>

                    <com.kingja.zsqs.view.StringTextView
                        android:id="@+id/tv_entTotalBuildingArea"
                        style="@style/font_9_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="鹿城区XXX项目"
                        android:textStyle="bold"/>


                </LinearLayout>


            </LinearLayout>

            <!--右边公司-->

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40dp">

                    <TextView
                        style="@style/font_3_13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="实施单位："
                        android:textStyle="bold"/>

                    <com.kingja.zsqs.view.StringTextView
                        android:id="@+id/tv_implementor"
                        style="@style/font_3_13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="XXXXXXX公司"
                        android:textStyle="bold"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40dp">

                    <TextView
                        style="@style/font_3_13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="代理单位："
                        android:textStyle="bold"/>

                    <com.kingja.zsqs.view.StringTextView
                        android:id="@+id/tv_agent"
                        style="@style/font_3_13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="XXXXXXX公司"
                        android:textStyle="bold"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40dp">

                    <TextView
                        style="@style/font_3_13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="测绘单位："
                        android:textStyle="bold"/>

                    <com.kingja.zsqs.view.StringTextView
                        android:id="@+id/tv_mapper"
                        style="@style/font_3_13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="XXXXXXX公司"
                        android:textStyle="bold"/>


                </LinearLayout>

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40dp">

                    <TextView
                        style="@style/font_3_13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="认定单位："
                        android:textStyle="bold"/>

                    <com.kingja.zsqs.view.StringTextView
                        android:id="@+id/tv_identifier"
                        style="@style/font_3_13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="XXXXXXX公司"
                        android:textStyle="bold"/>


                </LinearLayout>

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40dp">

                    <TextView
                        style="@style/font_3_13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="评估单位："
                        android:textStyle="bold"/>

                    <com.kingja.zsqs.view.StringTextView
                        android:id="@+id/tv_evaluator"
                        style="@style/font_3_13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="XXXXXXX公司"
                        android:textStyle="bold"/>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp">

            <TextView
                style="@style/font_3_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="征收范围："
                android:textStyle="bold"/>

            <com.kingja.zsqs.view.StringTextView
                android:id="@+id/tv_areaRange"
                style="@style/font_3_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="鹿城区XXX项目xxxxxx"
                android:textStyle="bold"/>


        </LinearLayout>

        <View style="@style/div_hor_gray_2"/>


        <TextView
            style="@style/font_3_13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:text="红线图范围"
            android:textStyle="bold"/>

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:orientation="vertical"
            app:cardElevation="6dp"
            app:cardPreventCornerOverlap="false">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v4.view.ViewPager
                    android:id="@+id/vp_files"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#eeeeee"/>

                <TextView
                    android:id="@+id/tv_empty"
                    style="@style/font_6_18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="暂无相关信息"
                    android:visibility="gone"/>


                <com.kingja.supershapeview.view.SuperShapeTextView
                    android:id="@+id/sstv_index"
                    style="@style/font_3_13"
                    android:layout_width="42dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="18dp"
                    android:layout_marginRight="18dp"
                    android:layout_marginBottom="18dp"
                    android:gravity="center"
                    android:text="1/1"
                    android:textStyle="bold"
                    app:super_cornerRadius="5dp"
                    app:super_solidColor="@color/trans55_f"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>
</ScrollView>