<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="18dp"
        android:paddingBottom="18dp">


        <TextView
            android:id="@+id/tv_title"
            style="@style/font_3_13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="图片标题"
            android:textStyle="bold"/>


        <com.kingja.supershapeview.view.SuperShapeTextView
            android:id="@+id/sstv_showAll"
            style="@style/font_f_12"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="查看全部"
            android:textStyle="bold"
            app:super_cornerRadius="5dp"
            app:super_solidColor="@color/c_red"/>
    </RelativeLayout>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:orientation="vertical"
        app:cardElevation="6dp"
        app:cardPreventCornerOverlap="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v4.view.ViewPager
                android:id="@+id/vp_files"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#eeeeee"/>

            <TextView
                android:id="@+id/tv_empty"
                style="@style/font_6_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="暂无相关信息"
                android:visibility="gone"/>


            <com.kingja.supershapeview.view.SuperShapeTextView
                android:id="@+id/sstv_index"
                style="@style/font_3_12"
                android:layout_width="42dp"
                android:layout_height="18dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginBottom="18dp"
                android:gravity="center"
                android:text="1/1"
                android:textStyle="bold"
                app:super_cornerRadius="5dp"
                app:super_solidColor="@color/trans55_f"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>