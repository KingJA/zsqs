<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/trans30_0">

    <com.kingja.zsqs.view.PhotoViewPager
        android:id="@+id/vp_files"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <com.kingja.supershapeview.view.SuperShapeTextView
        android:id="@+id/sstv_index"
        style="@style/font_3_20"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="160dp"
        android:layout_marginRight="30dp"
        android:gravity="center"
        android:text="1/1"
        android:textStyle="bold"
        app:super_cornerRadius="5dp"
        app:super_solidColor="@color/trans55_f"/>

    <com.kingja.supershapeview.view.SuperShapeLinearLayout
        android:id="@+id/ssll_dismiss"
        android:layout_width="112dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="160dp"
        android:gravity="center"
        app:super_cornerRadius="5dp"
        app:super_solidColor="@color/c_red">


        <TextView
            style="@style/font_f_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:text="返回"
            android:textStyle="bold"/>

        <com.kingja.zsqs.view.StringTextView
            android:id="@+id/tv_countdown"
            style="@style/font_f_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[120s]"/>
    </com.kingja.supershapeview.view.SuperShapeLinearLayout>

</RelativeLayout>

