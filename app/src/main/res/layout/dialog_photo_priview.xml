<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_gravity="center_horizontal"
              android:background="@color/trans30_0"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="16dp"
        android:background="@mipmap/ic_close"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.kingja.zsqs.view.PhotoViewPager
            android:id="@+id/vp_files"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>



        <com.kingja.supershapeview.view.SuperShapeTextView
            android:id="@+id/sstv_index"
            style="@style/font_3_12"
            android:layout_width="42dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="18dp"
            android:layout_marginBottom="18dp"
            android:gravity="center"
            android:text="1/1"
            android:textStyle="bold"
            app:super_cornerRadius="5dp"
            app:super_solidColor="@color/trans55_f"/>


    </RelativeLayout>


</LinearLayout>