<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/c_f">


    <com.kingja.pdfsir.NewRemotePDFViewPager
        android:id="@+id/pdfView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_pdf"
            android:layout_width="89dp"
            android:layout_height="108dp"
            android:layout_centerInParent="true"
            android:layout_marginBottom="24dp"
            android:background="@mipmap/ic_pdf"/>


        <com.kingja.supershapeview.view.SuperShapeLinearLayout
            android:id="@+id/ssll_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            app:super_cornerRadius="50dp"
            app:super_strokeColor="@color/f_red"
            app:super_strokeWidth="2dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="12dp"
                android:background="@mipmap/ic_download"/>

            <TextView
                android:id="@+id/tv_tip"
                style="@style/font_red_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下载并预览PDF"/>
        </com.kingja.supershapeview.view.SuperShapeLinearLayout>


    </LinearLayout>


    <TextView
        android:id="@+id/tv_fileName"
        style="@style/font_f_28"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:layout_alignParentBottom="true"
        android:background="@color/trans30_0"
        android:gravity="center"
        android:text="名称"/>


</RelativeLayout>