<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:background="@drawable/shape_r8_white">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="424dp"
        android:background="@mipmap/ic_submission_quotation"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:text="您的装修预估价为"
            android:textColor="#1e30af"
            android:textSize="20sp"/>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:orientation="horizontal">

            <com.kingja.zsqs.view.StringTextView
                android:id="@+id/tv_price"
                android:layout_marginRight="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                style="@style/font_red_32"
                android:textStyle="bold"/>

            <TextView
                style="@style/font_3_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"/>


        </LinearLayout>

        <TextView
            style="@style/font_3_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:text="按实测套内面积计价"/>

        <TextView
            style="@style/font_6_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:text="计算结果仅供参考，实际价格以最终合同约定为主"/>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <com.kingja.supershapeview.view.SuperShapeTextView
                android:id="@+id/sstv_confirm"
                android:layout_width="112dp"
                android:layout_height="36dp"
                android:layout_marginRight="24dp"
                android:gravity="center"
                android:text="预约装修"
                style="@style/font_f_13"
                android:textStyle="bold"
                app:super_cornerRadius="5dp"
                app:super_solidColor="@color/c_red"/>

            <com.kingja.supershapeview.view.SuperShapeLinearLayout
                android:id="@+id/ssll_dismiss"
                android:layout_width="112dp"
                android:layout_height="36dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                app:super_cornerRadius="5dp"
                app:super_solidColor="@color/c_red">


                <TextView
                    style="@style/font_f_13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:text="返回"
                    android:textStyle="bold"/>

                <TextView
                    style="@style/font_f_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[120s]"/>
            </com.kingja.supershapeview.view.SuperShapeLinearLayout>

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>