<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    android:focusable="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:background="@drawable/shape_r8_white"
        android:orientation="vertical"
        android:paddingTop="50dp">


        <TextView
            style="@style/font_3_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="22dp"
            android:gravity="center"
            android:text="一键报价"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical">

            <TextView
                style="@style/font_3_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="26dp"
                android:text="姓        名"/>

            <com.kingja.supershapeview.view.SuperShapeEditText
                android:singleLine="true"
                android:id="@+id/sset_userName"
                style="@style/font_6_13"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingLeft="22dp"
                android:paddingRight="22dp"
                android:text=""
                app:super_strokeColor="@color/f_c"
                app:super_strokeWidth="2dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical">

            <TextView
                style="@style/font_3_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="26dp"
                android:text="手机号码"/>

            <com.kingja.supershapeview.view.SuperShapeEditText
                android:singleLine="true"
                android:inputType="number"
                android:maxLength="11"
                android:id="@+id/sset_mobile"
                style="@style/font_6_13"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingLeft="22dp"
                android:paddingRight="22dp"
                android:text=""
                app:super_strokeColor="@color/f_c"
                app:super_strokeWidth="2dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical">

            <TextView
                style="@style/font_3_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="26dp"
                android:text="面        积"/>

            <com.kingja.supershapeview.view.SuperShapeEditText
                android:singleLine="true"
                android:inputType="numberDecimal"
                android:id="@+id/sset_area"
                style="@style/font_6_13"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingLeft="22dp"
                android:paddingRight="22dp"
                android:text=""
                app:super_strokeColor="@color/f_c"
                app:super_strokeWidth="2dp"/>


        </LinearLayout>






        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <com.kingja.supershapeview.view.SuperShapeTextView
                android:id="@+id/sstv_confirm"
                android:layout_width="112dp"
                android:layout_height="36dp"
                android:layout_marginRight="24dp"
                android:gravity="center"
                android:text="提交"
                style="@style/font_f_13"
                android:textStyle="bold"
                app:super_cornerRadius="5dp"
                app:super_solidColor="@color/c_red"/>

            <com.kingja.supershapeview.view.SuperShapeLinearLayout
                android:id="@+id/ssll_dismiss"
                android:layout_width="112dp"
                android:layout_height="36dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                app:super_cornerRadius="5dp"
                app:super_solidColor="@color/c_red">


                <TextView
                    style="@style/font_f_13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:text="返回"
                    android:textStyle="bold"/>

                <com.kingja.zsqs.view.StringTextView
                    android:id="@+id/tv_countdown"
                    style="@style/font_f_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[120s]"/>
            </com.kingja.supershapeview.view.SuperShapeLinearLayout>

        </LinearLayout>

        <TextView
            style="@style/font_3_16"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="咨询电话 : 400-867-8008"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>



    </LinearLayout>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/ic_popout"/>
</RelativeLayout>