<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_r8_white"
    android:orientation="vertical">

    <TextView
        style="@style/font_9_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="48dp"
        android:paddingTop="24dp"
        android:paddingRight="48dp"
        android:paddingBottom="24dp"
        android:text="温馨提示"/>

    <View style="@style/div_hor_gray_1"/>


    <TextView
        android:id="@+id/tv_content"
        android:gravity="center"
        android:lineSpacingExtra="8dp"
        style="@style/font_6_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="48dp"
        android:paddingRight="48dp"
        android:paddingTop="60dp"
        android:paddingBottom="60dp"
        android:text=""/>

    <LinearLayout
        android:paddingBottom="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <com.kingja.supershapeview.view.SuperShapeTextView
                android:id="@+id/sstv_confirm"
                style="@style/font_f_20"
                android:layout_width="168dp"
                android:layout_height="54dp"
                android:gravity="center"
                android:text="确定"
                android:textStyle="bold"
                app:super_cornerRadius="5dp"
                app:super_solidColor="@color/c_red"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">


            <com.kingja.supershapeview.view.SuperShapeLinearLayout
                android:id="@+id/ssll_dismiss"
                android:layout_width="168dp"
                android:layout_height="54dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                app:super_cornerRadius="5dp"
                app:super_solidColor="@color/c_red">


                <TextView
                    style="@style/font_f_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:text="返回"
                    android:textStyle="bold"/>

                <com.kingja.zsqs.view.StringTextView
                    android:id="@+id/tv_countdown"
                    style="@style/font_f_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[120s]"/>
            </com.kingja.supershapeview.view.SuperShapeLinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>