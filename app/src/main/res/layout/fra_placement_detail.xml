<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/c_f"
        android:orientation="vertical"
        android:padding="16dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <!--套型图-->
            <android.support.v7.widget.CardView
                android:layout_width="340dp"
                android:layout_height="260dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical"
                app:cardElevation="6dp"
                app:cardPreventCornerOverlap="false">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_housePlanUrl"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"/>


                    <TextView
                        android:id="@+id/tv_title_planName"
                        style="@style/font_f_18"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/trans30_0"
                        android:gravity="center"
                        android:text="户型图"/>


                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="26dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/font_3_16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="厅室 : "
                        android:textStyle="bold"/>

                    <com.kingja.zsqs.view.StringTextView
                        android:id="@+id/tv_rootDes"
                        style="@style/font_3_16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textStyle="bold"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="26dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/font_3_16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="户型 : "
                        android:textStyle="bold"/>

                    <com.kingja.zsqs.view.StringTextView
                        android:id="@+id/tv_planName"
                        style="@style/font_3_16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textStyle="bold"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="26dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/font_3_16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="建面 : "
                        android:textStyle="bold"/>

                    <com.kingja.zsqs.view.StringTextView
                        android:id="@+id/tv_area"
                        style="@style/font_3_16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textStyle="bold"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="26dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/font_3_16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="朝向 : "
                        android:textStyle="bold"/>

                    <com.kingja.zsqs.view.StringTextView
                        android:id="@+id/tv_towardsName"
                        style="@style/font_3_16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textStyle="bold"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.kingja.supershapeview.view.SuperShapeTextView
                        android:id="@+id/sstv_appoint"
                        style="@style/font_f_13"
                        android:layout_width="100dp"
                        android:layout_height="32dp"
                        android:layout_marginRight="20dp"
                        android:gravity="center"
                        android:text="预约装修"
                        android:textStyle="bold"
                        app:super_cornerRadius="5dp"
                        app:super_solidColor="@color/c_orange"/>

                    <com.kingja.supershapeview.view.SuperShapeTextView
                        android:id="@+id/sstv_offer"
                        style="@style/font_f_13"
                        android:layout_width="100dp"
                        android:layout_height="32dp"
                        android:gravity="center"
                        android:text="一键报价"
                        android:textStyle="bold"
                        app:super_cornerRadius="5dp"
                        app:super_solidColor="@color/c_blue_light"/>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <View style="@style/div_hor_gray_2"/>

        <TextView
            style="@style/font_3_13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:layout_marginBottom="26dp"
            android:text="推荐设计"
            android:textStyle="bold"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="320dp">

            <android.support.v4.view.ViewPager
                android:id="@+id/vp_vr"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/tv_empty"
                style="@style/font_6_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="暂无相关信息"
                android:visibility="gone"/>


            <com.kingja.supershapeview.view.SuperShapeTextView
                android:id="@+id/sstv_index"
                style="@style/font_3_12"
                android:layout_width="42dp"
                android:layout_height="18dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="18dp"
                android:layout_marginBottom="18dp"
                android:gravity="center"
                android:text="1/1"
                android:textStyle="bold"
                app:super_cornerRadius="5dp"
                app:super_solidColor="@color/trans55_f"/>

        </RelativeLayout>

    </LinearLayout>
</ScrollView>