<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_patternName"
        style="@style/font_6_12"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="120户型"/>

    <TextView
        android:id="@+id/tv_area"
        style="@style/font_6_12"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="120㎡"/>

    <TextView
        android:id="@+id/tv_remark"
        style="@style/font_6_12"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="备注"/>

    <LinearLayout
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1">

        <com.kingja.supershapeview.view.SuperShapeTextView
            android:id="@+id/sstv_appoint"
            style="@style/font_f_12"
            android:layout_width="66dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:text="预约装修"
            android:textStyle="bold"
            app:super_cornerRadius="5dp"
            app:super_solidColor="@color/c_red"/>

    </LinearLayout>
</LinearLayout>