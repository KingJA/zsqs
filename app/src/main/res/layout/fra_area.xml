<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_background">

    <!--导航-->

    <LinearLayout
        android:layout_marginTop="42dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:textStyle="bold"
        style="@style/font_f_20"
        android:background="@mipmap/ic_zone_list"
        android:gravity="center"
        android:text="区域列表"
        android:layout_width="match_parent"
        android:layout_height="38dp"/>
    
    <com.kingja.zsqs.view.FixedGridView
        android:id="@+id/fgv_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:listSelector="@android:color/transparent"
        android:numColumns="4"
        android:scrollbars="none"
        android:verticalSpacing="10dp"
        tools:listitem="@layout/item_nav"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="28dp"
        android:layout_marginLeft="32dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="26dp"
            android:layout_height="16dp"
            android:layout_marginRight="16dp"
            android:background="@mipmap/ic_service_hotline"/>

        <TextView
            android:id="@+id/tv_serverTel"
            style="@style/font_f_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务热线 : 400-867-8008"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_qcode_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="26dp"
        android:layout_marginBottom="28dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_appQrcodeImage"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_marginBottom="12dp"
            android:background="@mipmap/ic_app_download"/>

        <TextView
            android:id="@+id/tv_appQrcodeTitle"
            style="@style/font_f_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="扫码下载APP"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="26dp"
        android:layout_marginBottom="28dp"
        android:layout_toLeftOf="@id/ll_qcode_download"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_wechatQrcodeUrl"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_marginBottom="12dp"
            android:background="@mipmap/ic_tencent"/>

        <TextView
            android:id="@+id/tv_wechatQrcodeTitle"
            style="@style/font_f_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="扫码关注公众号"/>
    </LinearLayout>

</RelativeLayout>